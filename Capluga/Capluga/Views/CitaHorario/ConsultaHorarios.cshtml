@model IEnumerable<Capluga.Entities.HorarioEnt>
@{
    ViewBag.Title = "Consulta Horarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section href="@Url.Action("RegistrarHorarios", "CitaHorario")" class="btn btn-outline-success" style="display: block; margin-left: auto;">Registrar Horario</section>
<h2>Horarios Registrados</h2>
<div class="container">
    @if (Model.Count() > 0)
    {
        <table id="horariosTable" class="display" style="width:150%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre del Horario</th>
                    <th>Fecha y Hora</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var horario in Model)
                {
                    <tr>
                        <td>@horario.ScheduleID</td>
                        <td>@horario.Dname</td>
                        <td>@horario.DateandTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <!-- Acciones como editar o eliminar -->
                            <a href="@Url.Action("ActualizarHorarios", "CitaHorario", new { q = horario.ScheduleID })" class="btn btn-primary" style="display: block; margin-block: auto;">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="col-12 alert alert-info" role="alert" style="text-align: center; margin-top: 5%;">
            No hay horarios registrados en este momento
        </div>
    }
</div>
